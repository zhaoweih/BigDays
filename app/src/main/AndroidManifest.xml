<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.weihaozhao.bigdays">

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.weihaozhao.bigdays.activity.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>
        <activity android:name="com.weihaozhao.bigdays.activity.AddDataActivity"
            android:screenOrientation="portrait"
            android:label="@string/add"></activity>
        <activity android:name="com.weihaozhao.bigdays.activity.ZoomActivity"
            android:screenOrientation="portrait"
            android:label="@string/zoom"></activity>
        <activity android:name="com.weihaozhao.bigdays.activity.UpdateDataActivity"
            android:screenOrientation="portrait"
            android:label="@string/update"></activity>
        <activity android:name="com.weihaozhao.bigdays.activity.AboutActivity"
            android:screenOrientation="portrait"
            android:label="@string/about"></activity>
    </application>

</manifest>