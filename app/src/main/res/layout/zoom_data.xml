<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6FA"

    >

    <ImageView
        android:id="@+id/zoom_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg"
        />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        app:cardCornerRadius="5dp"
        android:layout_centerInParent="true"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--<TextView-->
                <!--android:id="@+id/events_id"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_margin="5dp"-->
                <!--android:textSize="16sp"-->
                <!--/>-->

            <RelativeLayout
                android:id="@+id/zoom_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimaryDark"
                >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_margin="3dp"
                android:textColor="@color/white"
                />











                <TextView
                    android:id="@+id/events_name_zoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="爸爸生日"
                    android:layout_margin="3dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    />

            <TextView
                android:id="@+id/before_day_zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还有"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_margin="3dp"
                android:textColor="@color/white"
                />


            </LinearLayout>
            </RelativeLayout>

            <View  android:layout_height="2px"
                android:layout_width="match_parent"
                android:background="#b78f8f8f"

                />



            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="200dp">

                <TextView
                    android:id="@+id/days_left_zoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:textSize="100sp"
                    android:text="15"
                    android:textColor="#000000"
                    />


            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="15dp"
                >
                <TextView
                    android:text="目标日:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/show_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-04-01"
                    android:textSize="15sp"
                    />

            </LinearLayout>

            </RelativeLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>
    </RelativeLayout>
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_zoom"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#00000000"
        android:layout_marginTop="20dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />


</FrameLayout>